<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
     <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>

  <!-- changed class probably have to change css -->
  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Category</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
          <% @categories.each do |category |%>
            <h4><%= category.name%></h4>
          <% end %>
          <td>
        </tr>
      </tbody>
    </table>

  </div>

</section>
